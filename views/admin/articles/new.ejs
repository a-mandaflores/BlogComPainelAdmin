<%- include ("../../partials/header.ejs") %>

<%- include ("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/save" method="POST">
                <input class="form-control" type="text" name="title" placeholder="Defina o titulo do artigo"><br>
                <textarea id="article" name="body" class="form-control" placeholder="Escreva o artigo aqui!"></textarea>
                <br><button class="btn btn-success">Cadastrar</button>
            </form>
        </div> 
    </div>
</div>


<%- include ("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink insertdatetime media save table paste link image lists print preview hr searchreplace wordcount fullscrean'
        ]
    })

</script>